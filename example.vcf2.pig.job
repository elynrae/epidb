#!/bin/bash
#SBATCH -p medium
#SBATCH -N 1
#SBATCH -n 12
#SBATCH --time=12:00:00
#SBATCH --error=example.err
#SBATCH --output=example.out

module purge
module load samtools/1.3
module load gatk/3.5

cd ~/epidb.processing/pig/tissue/

gatk -T UnifiedGenotyper -I example.fixed.bam -R ~/index/sus_scrofa/current_build.fa -o example.final.vcf -nt 12 -dt NONE -glm SNP -out_mode EMIT_ALL_SITES -L snp.intervals -U ALLOW_N_CIGAR_READS -allowPotentiallyMisencodedQuals

